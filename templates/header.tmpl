<!DOCTYPE html>
<html>
<head>
    <title>{{ .Title }}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Spectral:wght@400;500;600;700&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="{{ .Stylesheet }}">
</head>
<body>

<input type="checkbox" id="menu-toggle" class="menu-toggle" />

<div class="header">
    <div class="square"></div>

    <div class="header-container">
        <div class="header-container-1">
            <label for="menu-toggle" class="hamburger-menu">
                <img src="/static/bars-solid.svg" alt="Menu items">
            </label>
        </div>
        <div class="header-container-2">
            <div>
                <a href="/">
                    <img src="/static/logo.svg" alt="Reiser Relief">
                </a>
            </div>
        </div>
        <div class="header-container-3">
            <a href="/contact">
                <div class="header-button">
                    <div>
                        <img src="/static/phone-volume-solid.svg" alt="">
                    </div>
                    <div>Contact</div>
                </div>
            </a>
        </div>
    </div>

</div>

<div class="mobile-menu">
    <div>
        <label for="menu-toggle" class="close">
            <img src="/static/xmark-solid.svg" alt="">
        </label>

        <div class="menu-items-container">
            <a href="/">
                <div class="menu-item">
                    Home
                </div>
            </a>
            <a href="/about">
                <div class="menu-item">
                    About
                </div>
            </a>
            <a href="/donate">
                <div class="menu-item">
                    Donate
                </div>
            </a>
            <a href="/contact">
                <div class="menu-item">
                    Contact
                </div>
            </a>
        </div>
    </div>
</div>